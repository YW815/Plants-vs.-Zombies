{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++:自定义1生成活动文件",
            "command": "D:\\MinGW\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-I", "${workspaceFolder}\\include",
                "${file}",
                "-leasyx",
                "-lwinmm",
                "-lgdi32",
                "-o",
                "${fileDirname}\\coin\\${fileBasenameNoExtension}.exe",
                "-static",  // 使用静态链接
            ],
            "options": {
                // "cwd": "D:\\Code\\compiler\\mingw64\\bin"
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            // "group": "build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "编译器: D:\\MinGW\\bin\\gcc.exe"
        }
    ],
    "version": "2.0.0"
}